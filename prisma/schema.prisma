// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo para lutadores
model Lutador {
  id            Int           @id @default(autoincrement())
  nome          String        @unique
  apelido       String?
  pais          String
  altura        Float
  sexo          String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  categoriaAtual String       @default("Peso MÃ©dio")

  // Relacionamentos
  lutasBatalhadas1 Luta[]       @relation("Lutador1")
  lutasBatalhadas2 Luta[]       @relation("Lutador2")
  vitorias        Luta[]       @relation("Vencedor")
  rankings        Ranking[]
}

// Modelo para eventos
model Evento {
  id         Int      @id @default(autoincrement())
  nome       String
  data       DateTime
  local      String
  pais       String
  finalizado Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relacionamentos
  lutas Luta[]
}

// Modelo para lutas
model Luta {
  id           Int      @id @default(autoincrement())
  eventoId     Int
  lutador1Id   Int
  lutador2Id   Int
  categoria    String
  round        Int?
  tempo        String?
  metodoVitoria String?
  vencedorId   Int?
  bonus        String?
  disputaTitulo Boolean @default(false)
  noContest    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relacionamentos
  evento   Evento  @relation(fields: [eventoId], references: [id])
  lutador1 Lutador @relation("Lutador1", fields: [lutador1Id], references: [id])
  lutador2 Lutador @relation("Lutador2", fields: [lutador2Id], references: [id])
  vencedor Lutador? @relation("Vencedor", fields: [vencedorId], references: [id])
}

// Modelo para ranking
model Ranking {
  id          Int       @id @default(autoincrement())
  lutadorId   Int
  categoria   String
  posicao     Int
  pontos      Int
  corFundo    String?
  variacao    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relacionamentos
  lutador   Lutador    @relation(fields: [lutadorId], references: [id])
}
